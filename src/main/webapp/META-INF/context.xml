<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">

    <Resource name="jdbc/hsqldb" type="javax.sql.DataSource"
              testWhileIdle="true"
              testOnBorrow="true"
              testOnReturn="false"
              validationInterval="30000"
              maxActive="10"
              initialSize="10"
              driverClassName="org.hsqldb.jdbcDriver"
              url="jdbc:hsqldb:file:/tmp/employees"/>

</Context>
